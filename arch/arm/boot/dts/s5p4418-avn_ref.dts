/dts-v1/;
#include <dt-bindings/interrupt-controller/irq.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include "s5p4418.dtsi"

/ {
	memory {
		device_type = "memory";
		reg = <0x40000000 0x40000000>;
	};

	aliases {
		i2c2 = &i2c_gpio2;
		i2c5 = &i2c_gpio5;
		i2c6 = &i2c_gpio6;
	};

	soc {
		#include "s5p4418-pinctrl.dtsi"
		clocks {
			uart3:uart@c00ab000 { clock-frequency = <147500000>; };
		};

		serial0:serial@c00a1000 {
			dmas = <&pl08xdma0 2>, <&pl08xdma0 3>;
			dma-names = "tx", "rx";
			status ="okay";
		};

		serial1:serial@c00a0000 {
			dmas = <&pl08xdma0 0>, <&pl08xdma0 1>;
			dma-names = "tx", "rx";
			status ="okay";
		};

		serial2:serial@c00a2000 {
			dmas = <&pl08xdma0 4>, <&pl08xdma0 5>;
			dma-names = "tx", "rx";
			status ="okay";
		};

		serial3:serial@c00a3000 {
			status ="okay";
		};

		serial4:serial@c006d000 {
			status ="okay";
		};

		amba {
			pl08xdma0:pl08xdma@c0000000 {
				use_isr;

				ch12 {
					slave_wait_flush_dma;
				};

				ch13 {
					slave_wait_flush_dma;
				};

				ch14 {
					slave_wait_flush_dma;
				};

				ch15 {
					slave_wait_flush_dma;
				};
			};

			pl08xdma1:pl08xdma@c0001000 {
				use_isr;

				ch0 {
					slave_wait_flush_dma;
				};

				ch1 {
					slave_wait_flush_dma;
				};
			};
		};

		dw_mmc_2:dw_mmc@c0069000 {
			num-slots = <1>;
			bus-width = <4>;
			cap-mmc-highspeed;
			broken-cd;
			non-removable;
			clock-frequency = <200000000>;
			card-detect-delay = <200>;
			disable-wp;
			status = "okay";
			nexell,drive_dly = <0x0>;
			nexell,drive_shift = <0x03>;
			nexell,sample_dly = <0x00>;
			nexell,sample_shift = <0x02>;
		};

		dw_mmc_0:dw_mmc@c0062000 {
			num-slots = <1>;
			bus-width = <4>;
			cap-sd-highspeed;
			clock-frequency = <100000000>;
			card-detect-delay = <200>;
			disable-wp;
			cd-gpios = <&gpio_e 31 0>;
			cd-inverted;
			nexell,drive_dly = <0x0>;
			nexell,drive_shift = <0x02>;
			nexell,sample_dly = <0x00>;
			nexell,sample_shift = <0x01>;
			status = "okay";
		};

		spdiftx@c0059000 {
			pcm-bit = <16>;
			sample_rate = <48000>;
			status = "okay";
		};

		watchdog@c0019000 {
			status = "okay";
		};

		rtc@c0010c00 {
			status = "okay";
		};

		nexell_usbphy: nexell-usbphy@c0012000 {
			status = "okay";
		};

		ehci@c0030000 {
			status = "okay";
			port@0 {
				status = "okay";
			};
		};

		ohci@c0020000 {
			status = "okay";
			port@0 {
				status = "okay";
			};
		};

		dwc2otg@c0040000 {
			gpios = <&alive_0 5 0>;
			status = "okay";
		};

		pwm:pwm@c0018000 {
			status = "okay";
		};

		i2s_0:i2s@c0055000 {
			master-mode = <1>;
			mclk-in = <0>;
			trans-mode = <0>;
			frame-bit = <32>;
			sample-rate = <48000>;
			pre-supply-mclk = <1>;
			status = "okay";
		};

		i2s_1:i2s@c0056000 {
			master-mode = <1>;
			mclk-in = <0>;
			trans-mode = <0>;
			frame-bit = <32>;
			sample-rate = <48000>;
			pre-supply-mclk = <1>;
			status = "okay";
		};

		pinctrl@C0010000 {
			key_power:key_power {
				nexell,pins = "alive-0";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			key_back:key_back {
				nexell,pins = "alive-1";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			key_voldown:key_voldown {
				nexell,pins = "alive-2";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			key_volup:key_volup {
				nexell,pins = "alive-3";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			key_homepage:key_homepage {
				nexell,pins = "alive-4";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			toutchpanel_irq: touchpanel-irq {
				nexell,pins = "gpiod-8";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};
		};
	};	/*** soc ***/

	vcc_lcdgate: regulator-fix@0 {
		compatible = "regulator-fixed";

		regulator-name = "LCD Gate Vcc";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-boot-on;
		regulator-always-on;

		gpio = <&gpio_b 25 GPIO_ACTIVE_HIGH>;
		enable-active-high;
	};

	vcc_lcd: regulator-fix@1 {
		compatible = "regulator-fixed";

		regulator-name = "LCD Vcc";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-boot-on;
		regulator-always-on;

		gpio = <&gpio_c 11 GPIO_ACTIVE_HIGH>;
		enable-active-high;
	};

	i2c_gpio2: i2c@2 {
		compatible = "i2c-gpio";
		gpios = <&gpio_d 7 0 /* sda */
		    &gpio_d 6 0 /* scl */
		    >;
		i2c-gpio,delay-us = <100>;
		#address-cells = <1>;
		#size-cells = <0>;

		tsc2007: tsc2007@48 {
			compatible = "ti,tsc2007";
			gpios = <&gpio_d 8 0>;
			interrupt-parent = <&gpio_d>;
			interrupts = <8 IRQ_TYPE_EDGE_FALLING>;
			pinctrl-names = "default";
			pinctrl-0 = <&toutchpanel_irq>;
			reg = <0x48>;
			ti,x-plate-ohms = <180>;
		};
	};

	i2c_gpio5: i2c@5 {
		compatible = "i2c-gpio";
		gpios = <&gpio_c 27 0 /* sda */
		    &gpio_c 25 0 /* scl */
		    >;
		i2c-gpio,delay-us = <100>;
		#address-cells = <1>;
		#size-cells = <0>;

		usb2514: usb2514@2c {
			compatible = "smsc,usb2514";
			reg = <0x2c>;
			reset-gpios = <&gpio_e 7 1>;
			initial-mode = <1>;
		};
	};

	i2c_gpio6: i2c@6 {
		compatible = "i2c-gpio";
		gpios = <&gpio_d 23 0 /* sda */
		    &gpio_d 22 0 /* scl */
		    >;
		i2c-gpio,delay-us = <100>;
		#address-cells = <1>;
		#size-cells = <0>;
	};

	spdif_out: spdif-out {
		compatible = "linux,spdif-dit";
	};

	spdif-transceiver {
		compatible = "nexell,spdif-transceiver";
		sample_rate = <48000>;
		format = "S16";
	};

	gpio_key: gpio_keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;
		pinctrl-names = "default";
		pinctrl-0 = <&key_power &key_back &key_voldown
		    &key_volup &key_homepage>;

		power {
			label = "Power";
			gpios = <&alive_0 0 0>;
			linux,code = <KEY_POWER>;
			gpio-key,wakeup;
		};

		back {
			label = "Back";
			gpios = <&alive_0 1 0>;
			linux,code = <KEY_BACK>;
		};

		voldown {
			label = "VolDown";
			gpios = <&alive_0 2 0>;
			linux,code = <KEY_VOLUMEDOWN>;
		};

		volup {
			label = "VolUp";
			gpios = <&alive_0 3 0>;
			linux,code = <KEY_VOLUMEUP>;
		};

		homepage {
			label = "Homepage";
			gpios = <&alive_0 4 0>;
			linux,code = <KEY_HOMEPAGE>;
		};
	};
};

&dp_drm {
	status = "okay";
	ports {
		port@0 {
			reg = <0>;
			back_color = < 0x0 >;
			color_key = < 0x0 >;
			plane-names = "video", "primary", "rgb";
		};
		port@1 {
			reg = <1>;
			back_color = < 0x0 >;
			color_key = < 0x0 >;
			plane-names = "video", "primary";
		};
	};
};

&dp_drm_lvds {
	status = "ok";

	enable-gpios = <&gpio_e 13 GPIO_ACTIVE_LOW>;

	display-timing {
		clock-frequency = <50000000>;
		hactive = <1024>;
		vactive = <600>;
		hfront-porch = <160>;
		hback-porch = <140>;
		hsync-len = <20>;
		vfront-porch = <12>;
		vback-porch = <20>;
		vsync-len = <3>;
	};

	dp_control {
		clk_src_lv0 = <0>;
		clk_div_lv0 = <16>;
		clk_src_lv1 = <7>;
		clk_div_lv1 = <1>;
		out_format = <2>;
	};
};

&dp_drm_hdmi {
	ddc-i2c-bus = <&i2c_gpio6>;
	status = "ok";
};
